{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "ALL /*": {
    "description": "serves up 404 error when entered path is incorrect"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an array of one article by article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 2,
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "votes": 0
        }
      ]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["topic"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments of an article",
    "queries": ["article_id"],
    "exampleResponse": {
      "comments": [{
        "comment_id": 14,
        "votes": 16,
        "created_at": "2020-06-09T05:00:00.000Z",
        "author": "icellusedkars",
        "body": "What do you see? I have no idea where this will lead us. This place I speak of, is known as the Black Lodge.",
        "article_id": 5
      }]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "serves an array of an article updated by votes",
    "queries": ["article_id"],
    "exampleResponse": {
      "article" : [{
      "article_id": 3,
      "title": "Eight pug gifs that remind me of mitch",
      "topic": "mitch",
      "author": "icellusedkars",
      "body": "some gifs",
      "created_at": "2020-06-09T05:00:00.000Z",
      "votes": 5,
      "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }]
    }
  },
    "POST /api/articles/:article_id/comments": {
    "description": "serves an array of posted comment to the selected article",
    "queries": ["article_id"],
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 19,
          "body": "Excellent article, well written.",
          "article_id": 13,
          "author": "lurker",
          "votes": 0,
          "created_at": "2023-10-03T17:19:51.181Z"
        }
      ]
    }
    },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by comment_id",
    "queries": ["comment_id"]
    },
    "GET /api/users": {
      "description": "serves an array of all users",
      "queries": [],
      "exampleResponse": {
        "topics": [{
          "username": "lurker",
          "name": "do_nothing",
          "avatar_url": "https://www.golenbock.com/wp-content/uploads/2015/01/placeholder-user.png"
        }]
      }
  }
}
